if [ -z "${DISPLAY}" ] && [ "${XDG_VTNR}" -eq 1 ]; then
    exec startx
fi


. --autoload --no-alias initialization/common
alias g='git'
alias ls='exa -alh'
alias ..='cd ..'
alias ...='cd ../..'
alias ....='cd ../../..'
alias mutt='neomutt'
alias xclip='xclip -selection clip'
alias config='/usr/bin/git --git-dir=/home/luka/dotfiles --work-tree=/home/luka'
export PATH="$PATH:/home/luka/.local/bin"
export EDITOR="vim"
bindkey --emacs '\^L' clear-and-redraw-all
bindkey --vi-insert '\^L' clear-and-redraw-all
bindkey --vi-command '\^L' clear-and-redraw-all

